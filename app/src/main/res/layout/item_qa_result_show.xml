<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="40dip" android:gravity="center" android:layout_marginLeft="20dp"
            android:layout_height="match_parent" android:orientation="vertical">
            <TextView
                android:id="@+id/tv_question_number"
                android:textStyle="bold"
                android:layout_width="40dip" android:text="1" android:textSize="18sp" android:gravity="center"
                android:layout_height="40dip" android:background="@drawable/circle_greent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent" android:background="@color/colorPrimary"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical" android:layout_marginRight="20dip"
            android:layout_height="wrap_content" android:minHeight="100dip" android:layout_marginLeft="7dip">

            <LinearLayout
                android:layout_width="wrap_content" android:gravity="center_vertical"
                android:layout_height="20dp" android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp" android:src="@drawable/question_time"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/question_time"
                    android:layout_width="wrap_content" android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" android:textSize="11sp" />

                <ImageView
                    android:layout_marginLeft="40dip"
                    android:layout_width="15dp" android:src="@drawable/question_source"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/question_source"
                    android:layout_width="wrap_content" android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_question_title"
                android:layout_width="wrap_content" android:textStyle="bold"
                android:lineSpacingExtra="3dip" android:layout_marginTop="3sp"
                android:layout_height="wrap_content" android:textSize="15sp" android:textColor="#3C3F41" />

            <TextView
                android:layout_marginTop="10dip" android:gravity="center_vertical"
                android:id="@+id/tv_question_answer" android:lineSpacingExtra="3dip"
                android:layout_width="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip"
                android:textColor="@android:color/white" android:background="@drawable/question_answer_background_green"
                android:layout_height="wrap_content"  android:textSize="15sp" />

            <TextView
                android:layout_marginTop="10dip" android:gravity="center_vertical"
                android:id="@+id/tv_question_right" android:lineSpacingExtra="3dip"
                android:layout_width="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip"
                android:textColor="@android:color/white" android:background="@drawable/question_answer_background_green"
                android:layout_height="wrap_content"  android:textSize="15sp" />

            <TextView
                android:layout_marginTop="10dip" android:gravity="center_vertical"
                android:id="@+id/tv_question_error" android:lineSpacingExtra="3dip"
                android:layout_width="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip"
                android:textColor="@android:color/white" android:background="@drawable/question_answer_background"
                android:layout_height="wrap_content"  android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>