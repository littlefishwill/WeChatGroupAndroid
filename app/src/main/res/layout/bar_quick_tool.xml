<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_questions" android:layout_margin="15dp"
        android:layout_width="200dip" app:cardBackgroundColor="@color/colorPrimary_bar_tool"
        android:layout_height="wrap_content" android:background="@android:color/transparent"
        app:cardElevation="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical" android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content" android:text="@string/app_name" android:textSize="15sp"
            android:layout_height="wrap_content" android:textColor="#414141"
            android:textStyle="bold"
            />


        <LinearLayout
            android:id="@+id/qa_bar_contain"
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="3dp">
            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="5dip"
                android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp" android:src="@mipmap/qa_wen_white" />

                <TextView
                    android:id="@+id/tv_qa_bar_title" android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"  android:textColor="#414141" android:textStyle="bold" android:singleLine="true"
                    android:layout_height="wrap_content" android:text="当前题库:脑经" android:textSize="12dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_qa_bar_qa_des"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp" android:singleLine="true"
                android:layout_width="wrap_content"  android:textColor="#414141" android:textStyle="bold"
                android:layout_height="wrap_content" android:text="" android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/tv_qa_bar_tips" android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"  android:textColor="#414141" android:textStyle="bold"
                    android:layout_height="wrap_content" android:text="答题倒计时:" android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_qa_bar_time"
                    android:textColor="@color/colorPrimaryDark" android:textStyle="bold" android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content" android:text="45" android:gravity="center"
                    android:layout_height="wrap_content" android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"  android:textColor="#414141" android:textStyle="bold"
                    android:layout_height="wrap_content" android:text="问答命令（Tip:在输入框中输入即可执行）:" android:textSize="12dp" />

                <TextView
                    android:layout_centerHorizontal="true" android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"  android:textColor="@color/colorAccent" android:textStyle="bold"
                    android:layout_height="wrap_content" android:text="暂停=P;开始=S;下一题=N;结束=E" android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>