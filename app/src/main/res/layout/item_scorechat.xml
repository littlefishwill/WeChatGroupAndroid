<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="1dp" android:layout_marginTop="1dp">

        <RelativeLayout
            android:id="@+id/item_question_contain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="3dp"
            android:background="?android:attr/selectableItemBackground" >



            <TextView
                android:id="@+id/tv_score_no" android:background="@drawable/question_answer_background" android:textColor="@android:color/white"
                android:layout_width="wrap_content" android:gravity="center" android:textSize="20sp" android:layout_centerVertical="true"
                android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:padding="10dp" />

            <ImageView
                android:id="@+id/tv_score_noico" android:layout_marginTop="-2dp"
                android:layout_width="30dp" android:gravity="center" android:textSize="20sp"
                android:layout_height="30dp" android:layout_marginLeft="35dp" />

            <TextView
                android:id="@+id/tv_qa_item_title"
                android:layout_width="wrap_content"
                android:text="" android:singleLine="true"
                android:layout_height="wrap_content" android:layout_marginLeft="120dp"
                android:textSize="20sp"  android:textColor="#4D4D4D"  android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_qa_item_time"
                android:layout_width="wrap_content" android:textStyle="bold"
                android:text="" android:layout_marginRight="30dp" android:layout_centerVertical="true"
                android:layout_height="wrap_content"  android:layout_alignParentRight="true"
                android:textSize="25sp"  android:textColor="#EC4A4B"  />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>